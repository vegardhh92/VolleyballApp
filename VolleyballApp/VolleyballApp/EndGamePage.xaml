<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VolleyballApp.EndGamePage"
             Title="End Game">
    <ScrollView>

        <StackLayout>
            <Label Text="Teams"
                   HorizontalOptions="CenterAndExpand"
                   FontSize="Large"/>
            <Label x:Name="teams" HorizontalOptions="CenterAndExpand"
           FontSize="Large"/>
            <StackLayout Orientation="Horizontal">
                <Label Text="Game Score: " HorizontalOptions="Center"/>
                <Entry x:Name="gameScoreEntry" 
                       HorizontalOptions="Center"
                       WidthRequest="150"
                       Placeholder="Home - Away" />
            </StackLayout>
            <Button Text="Save" Clicked="Save_Clicked"/>
        </StackLayout>
    </ScrollView>
</ContentPage>